@model Order

@{
    ViewBag.Title = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div>
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers"></select>
    </div>
    <div>
        <h3>Products</h3>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    <tr>
                        <td><input asp-for="@Model.Products[i].ProductName" /></td>
                        <td><input asp-for="@Model.Products[i].Quantity" /></td>
                        <td><input asp-for="@Model.Products[i].UnitPrice" /></td>
                        <td>@Model.Products[i].TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="submit">Save</button>
</form>
