@model IEnumerable<Order>

<h2>Order List</h2>
<table>
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone</th>
            <th>Total Order Qty</th>
            <th>Total Order Value</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Customer.CustomerName</td>
                <td>@order.Customer.Phone</td>
                <td>@order.Products.Sum(p => p.Quantity)</td>
                <td>@order.TotalOrderValue</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = order.Id })">Edit</a>
                    <a href="@Url.Action("Delete", new { id = order.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")">Create New Order</a>
